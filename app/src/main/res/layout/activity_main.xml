<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textColor="#616161"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:background="#FFF200"                />

            <TextView
                android:id="@+id/AScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:padding="24dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"
                android:textSize="56sp"/>

            <Button
                android:id="@+id/Point3A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 Points"
                android:textAllCaps="true"
                android:onClick="Point3A"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:background="#FF9800"/>

            <Button
                android:id="@+id/Point2A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 Points"
                android:textAllCaps="true"

                android:onClick="Point2A"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:background="#FF9800"/>

            <Button
                android:id="@+id/Point1A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:textAllCaps="true"
                android:onClick="Point1A"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:background="#FF9800"/>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_marginTop="52dp"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textColor="#616161"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:background="#FFF200"/>

            <TextView
                android:id="@+id/BScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:padding="24dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"
                android:textSize="56sp"/>

            <Button
                android:id="@+id/Point3B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 Points"
                android:textAllCaps="true"
                android:onClick="Point3B"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:background="#FF9800"/>

            <Button
                android:id="@+id/Point2B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 Points"
                android:textAllCaps="true"
                android:onClick="Point2B"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:background="#FF9800"/>

            <Button
                android:id="@+id/Point1B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:textAllCaps="true"
                android:background="#FF9800"
                android:onClick="Point1B"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:onClick="Reset"
        android:layout_alignParentBottom="true"
        android:background="#FF9800"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"/>


</RelativeLayout>